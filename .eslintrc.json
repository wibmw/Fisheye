{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "semi": [2, "never"],
        "indent": ["error", 4],
        "linebreak-style": ["error", "windows"],
        "class-methods-use-this": "off",
        "no-restricted-globals": "off",
        "radix": ["error", "as-needed"]
        "import/extensions": [
            <severity>,
            "never" | "always" | "ignorePackages",
            {
              <extension>: "never" | "always" | "ignorePackages"
            }
          ]
    }
}
